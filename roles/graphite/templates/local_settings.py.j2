SECRET_KEY = '{{ secret_key }}'
ALLOWED_HOSTS = [ '*' ]
TIME_ZONE = '{{ time_zone }}'

GRAPHITE_ROOT = '/usr/share/graphite'

CONF_DIR = '/etc/graphite-web'
STORAGE_DIR = '/var/lib/graphite-web'
CONTENT_DIR = '/usr/share/graphite/webapp/content'

WHISPER_DIR = '/var/lib/carbon/whisper/'
RRD_DIR = '/var/lib/carbon/rrd'
DATA_DIRS = [WHISPER_DIR, RRD_DIR] # Default: set from the above variables
LOG_DIR = '/var/log/graphite-web/'
INDEX_FILE = '/var/lib/graphite-web/index'  # Search index file

#MEMCACHE_HOSTS = [{% for host in groups.lb %}'{{ host }}:11211',{%endfor%}]
MEMCACHE_HOSTS = [{% for host in groups.lb %}'{{ hostvars[host]['ansible_default_ipv4'][address] }}:11211',{%endfor%}]
REMOTE_RENDERING = False
CARBONLINK_HOSTS = ["127.0.0.1:{{ carbon_port_a.cache }}:a", "127.0.0.1:{{ carbon_port_b.cache }}:b"]
#CLUSTER=[{% for host in groups['graphite'] %}{% if host != ansible_fqdn %}"{{ hostvars[host]['ansible_fqdn'] }}",{% endif %}{% endfor %}]
CLUSTER=[% set coma = joiner(",") %}{% for host in groups['graphite'] %}{% if host != ansible_fqdn %}"{{ coma() }}{{ hostvars[host].ansible_default_ipv4.address }}"{% endif %}{% endfor %}]
